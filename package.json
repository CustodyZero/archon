  "version": "0.0.1",
  "description": "Deterministic coordination kernel for local AI agents and humanâ€“AI workflows",
  "workspaces": [
    "packages/*",
    "modules/first-party/*",
    "modules/providers/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev-ui": "pnpm --filter @archon/desktop dev",
