{
  "name": "@archon/cli",
  "version": "0.0.1",
  "description": "Archon operator CLI",
  "type": "module",
  "bin": {
    "archon": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@archon/kernel": "workspace:*",
    "@archon/module-loader": "workspace:*",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.5.0"
  }
}
